.myinfor {
  border-top: 1rpx solid #DDD;
  border-bottom: 1rpx solid #DDD;
  background: #FFF;
  padding-left: 30rpx;
  box-sizing: border-box;
  font-size: 34rpx;
  margin-bottom: 20rpx;
}
.input-item {
  height: 100rpx;
  border-bottom: 1rpx solid #DDD;
}
.input-item:last-child {
  border: none;
}
.input-item text {
  width: 180rpx;
  color: #000;
  font-weight: 500;
}
.input-item input {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.myself-text {
  line-height: 100rpx;
  color: #4a4a4a;
}
.mt-30 {
  margin-top: 30rpx;
}